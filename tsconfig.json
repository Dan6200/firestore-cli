{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "isolatedModules": true,
    "outDir": "./built",
    "rootDir": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["*", "**/*"],
  "exclude": ["node_modules", "built", "tests"]
}
